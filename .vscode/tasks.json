/*https://stackoverflow.com/questions/51433937/how-to-compile-debug-a-c-application-in-docker-with-visual-studio-code-on-wind*/
{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "make release",
            "type": "shell",
            "command": "docker run --rm -t -v ${workspaceFolder}:/home/workspace --workdir /home/workspace ubuntu-redes:v1 make all",
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "label": "make debug",
            "type": "shell",
            "command": "docker run --rm -t -v ${workspaceFolder}:/home/workspace --workdir /home/workspace ubuntu-redes:v1 make debug",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build docker ubuntu-redes",
            "type": "shell",
            "command": "docker build -t ubuntu-redes:v1 ${workspaceFolder}/dockerbuild",
        }
    ],
    "version": "2.0.0"
}